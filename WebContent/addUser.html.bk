<!doctype html>
<html data-ng-app="userCreateApp">
  <head>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.5/angular.min.js"></script>
    <!-- script src="js/form.js"></script-->
  </head>
  <script>
  var app = angular.module('userCreateApp',[]);

  app.controller('UserController',UserController($scope, $http)
{
      $window.alert("here");

  $scope.user = {};
 
  $scope.createUser = function() 
  {
	  $http({
      method: 'POST',
      url: 'http://localhost:8080/angularPrj/createUser',
      headers: {'Content-Type': 'application/json'},
      data:  $scope.user
    }).success(function (data) 
      {
    	$scope.status=data;
      });
  };
}
  </script>  
  
  <body>
    <form data-ng-controller="UserController">
     <label>Add New User</label>
 
      <label>Name: </label> 
      <input type="text" id="name" name="name" data-ng-model="user.name" placeholder="User Name"> 
 
      <label>Password:</label>
      <input type="text" id="pwd" name="pwd" data-ng-model="user.pwd" placeholder="Your Password">
 
      <input type="submit" name="Add"  data-ng-click="createUser()"/>
      
      
      <br/>
      <label>{{status}}</label>
    </form>
  </body>
 
</html>